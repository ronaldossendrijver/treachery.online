@using Treachery.Client.GenericComponents;
@using Treachery.Shared;

<div>
    <table class="table table-sm">
        <thead>
            <tr class="table-dark">
                <th>Faction</th>
                <th>Leader</th>
                <th>Weapon</th>
                <th>Defense</th>
                <th>Dial</th>

                @if (Game.Applicable(Rule.AdvancedCombat))
                {
                    <th>Spice</th>
                }

            </tr>
        </thead>

        <tbody>

            <tr class="table-dark" style="@BackgroundStyle(AggressorBattle.Initiator)">
                <td>
                    <img class="img-fluid p-1" width=60 src="@Skin.Current.GetFactionTableImageURL(AggressorBattle.Initiator)" />

                    @if (AggressorBattle.Initiator == Game.BattleWinner)
                    {
                        <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="gold" class="bi bi-hand-thumbs-up-fill" viewBox="0 0 16 16">
                            <path d="M6.956 1.745C7.021.81 7.908.087 8.864.325l.261.066c.463.116.874.456 1.012.965.22.816.533 2.511.062 4.51a9.84 9.84 0 0 1 .443-.051c.713-.065 1.669-.072 2.516.21.518.173.994.681 1.2 1.273.184.532.16 1.162-.234 1.733.058.119.103.242.138.363.077.27.113.567.113.856 0 .289-.036.586-.113.856-.039.135-.09.273-.16.404.169.387.107.819-.003 1.148a3.163 3.163 0 0 1-.488.901c.054.152.076.312.076.465 0 .305-.089.625-.253.912C13.1 15.522 12.437 16 11.5 16H8c-.605 0-1.07-.081-1.466-.218a4.82 4.82 0 0 1-.97-.484l-.048-.03c-.504-.307-.999-.609-2.068-.722C2.682 14.464 2 13.846 2 13V9c0-.85.685-1.432 1.357-1.615.849-.232 1.574-.787 2.132-1.41.56-.627.914-1.28 1.039-1.639.199-.575.356-1.539.428-2.59z" />
                        </svg>
                    }

                </td>

                <td>
                    @if (AggressorBattle.Hero != null) {
                        <Image Shown=@AggressorBattle.Hero Popover=@Popup.Get(AggressorBattle.Hero, Game) Class="img-fluid p-1" Width=60/>
                    }

                    @if (AggressorBattle.Messiah)
                    {
                        <img class="img-fluid p-1" width=60 src="@Skin.Current.Messiah_URL" title=@Skin.Current.Describe(Concept.Messiah) />
                    }

                </td>

                <td>
                    @if (AggressorBattle.Weapon != null) {
                        <Image Shown=@AggressorBattle.Weapon Class="img-fluid p-1" Width=80/>
                    }
                </td>

                <td>
                    @if (AggressorBattle.Defense != null) {
                        <Image Shown=@AggressorBattle.Defense Class="img-fluid p-1" Width=80/>
                    }
                </td>

                <td><h2>@AggressorBattle.Dial(Game, DefenderBattle.Initiator)</h2></td>

                @if (Game.Applicable(Rule.AdvancedCombat))
                {
                    <td><h2>@AggressorBattle.Cost(Game)</h2></td>
                }
            </tr>

            <tr class="table-dark" style="@BackgroundStyle(DefenderBattle.Initiator)">
                <td>
                    <img class="img-fluid p-1" width=60 src="@Skin.Current.GetFactionTableImageURL(DefenderBattle.Initiator)" />

                    @if (DefenderBattle.Initiator == Game.BattleWinner)
                    {
                        <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="gold" class="bi bi-hand-thumbs-up-fill" viewBox="0 0 16 16">
                            <path d="M6.956 1.745C7.021.81 7.908.087 8.864.325l.261.066c.463.116.874.456 1.012.965.22.816.533 2.511.062 4.51a9.84 9.84 0 0 1 .443-.051c.713-.065 1.669-.072 2.516.21.518.173.994.681 1.2 1.273.184.532.16 1.162-.234 1.733.058.119.103.242.138.363.077.27.113.567.113.856 0 .289-.036.586-.113.856-.039.135-.09.273-.16.404.169.387.107.819-.003 1.148a3.163 3.163 0 0 1-.488.901c.054.152.076.312.076.465 0 .305-.089.625-.253.912C13.1 15.522 12.437 16 11.5 16H8c-.605 0-1.07-.081-1.466-.218a4.82 4.82 0 0 1-.97-.484l-.048-.03c-.504-.307-.999-.609-2.068-.722C2.682 14.464 2 13.846 2 13V9c0-.85.685-1.432 1.357-1.615.849-.232 1.574-.787 2.132-1.41.56-.627.914-1.28 1.039-1.639.199-.575.356-1.539.428-2.59z" />
                        </svg>
                    }

                </td>

                <td>
                    @if (DefenderBattle.Hero != null) {
                        <Image Shown=@DefenderBattle.Hero Popover=@Popup.Get(DefenderBattle.Hero, Game) Class="img-fluid p-1" Width=60/>
                    }

                    @if (DefenderBattle.Messiah)
                    {
                        <img class="img-fluid p-1" width=60 src="@Skin.Current.Messiah_URL" title=@Skin.Current.Describe(Concept.Messiah) />
                    }
                </td>

                <td>
                    @if (DefenderBattle.Weapon != null) {
                        <Image Shown=@DefenderBattle.Weapon Class="img-fluid p-1" Width=80/>
                    }
                </td>

                <td>
                    @if (DefenderBattle.Defense != null) {
                        <Image Shown=@DefenderBattle.Defense Class="img-fluid p-1" Width=80/>
                    }
                </td>

                <td><h2>@DefenderBattle.Dial(Game, AggressorBattle.Initiator)</h2></td>

                @if (Game.Applicable(Rule.AdvancedCombat))
                {
                    <td><h2>@DefenderBattle.Cost(Game)</h2></td>
                }
            </tr>

        </tbody>
    </table>
</div>

@code {

    [Parameter]
    public Game Game { get; set; }

    private Battle AggressorBattle => Game.AggressorPlan;

    private Battle DefenderBattle => Game.DefenderPlan;

    private string BackgroundStyle(Faction f)
    {
        if (f == Game.BattleWinner)
        {
            return "background-color:#AAFFAA32";
        }
        else
        {
            return "background-color:#FFAAAA32";
        }
    }
}