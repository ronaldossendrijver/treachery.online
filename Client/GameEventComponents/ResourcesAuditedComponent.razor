@using Treachery.Shared
@using Treachery.Client.GenericComponents;
@inherits GameEventComponent<ResourcesAudited>

<GameEventComponentLayout IsUrgent="@IsUrgent" BackgroundStyle="@BackgroundStyle" HeaderStyle="@HeaderStyle" BodyStyle=@BodyStyle CollapsedType=GetType()>

    <Header>Force a faction to reveal the amount of @Name(Concept.Resource), weapons and defenses?</Header>

    <Body>
        <SelectFromImageComponent @bind-Value="target" Values=@ResourcesAudited.ValidFactions(Game, Player) Required=true ImageWidth="40" />
        <ButtonRowComponent Confirm="Confirm" ConfirmError=@Validation />
    </Body>

</GameEventComponentLayout>

@code {

    private Faction target;

    protected override ResourcesAudited ConfirmedResult => new ResourcesAudited(Game, Faction) { Target = target };
}
