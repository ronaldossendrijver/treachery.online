@inherits GameEventComponent<Audited>

<GameEventComponentLayout IsUrgent="@IsUrgent" BackgroundStyle="@BackgroundStyle" HeaderStyle="@HeaderStyle" BodyStyle="@BodyStyle" CollapsedType="GetType()">

    <Header>Perform your audit</Header>
    <Body>

        <div>
            @foreach (var c in Game.AuditedCards)
            {
                <Image Shown=c Class="p-1" Width=100/>
            }
        </div>

        <ButtonRowComponent Confirm="Confirm" ConfirmText="Finish Audit" ConfirmError="@Validation" />

    </Body>

</GameEventComponentLayout>

@code {

    protected override bool IsUrgent => true;
    protected override Faction IsFactionSpecific => Faction.Brown;

    protected override Audited ConfirmedResult => new(Game, Faction);
}
