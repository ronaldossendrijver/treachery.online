@inherits GameEventComponent<Diplomacy>

<GameEventComponentLayout IsUrgent="@IsUrgent" BackgroundStyle="@BackgroundStyle" HeaderStyle="@HeaderStyle" BodyStyle="@BodyStyle" CollapsedType="GetType()">

    <Header>Use Diplomacy?</Header>
    <Body>

        <SelectFromImageComponent @bind-Value="card" Values="Diplomacy.ValidCards(Game, Player)" Required="true" ImageWidth="80" />

        <ButtonRowComponent Confirm="Confirm" ConfirmText="Use Diplomacy" ConfirmError="@Validation" />

    </Body>

</GameEventComponentLayout>

@code {

    private TreacheryCard card;

    protected override void OnParametersSet()
    {
        base.OnParametersSet();

        BackgroundImage = Skin.Current.GetImageURL(LeaderSkill.Diplomat);
    }

    protected override Diplomacy ConfirmedResult => new(Game, Faction) { Card = card };
}
