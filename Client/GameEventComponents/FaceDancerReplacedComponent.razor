@inherits GameEventComponent<FaceDancerReplaced>

<GameEventComponentLayout IsUrgent="@IsUrgent" BackgroundStyle="@BackgroundStyle" HeaderStyle="@HeaderStyle" BodyStyle="@BodyStyle" CollapsedType="GetType()">

    <Header>Replace a Face Dancer?</Header>
    <Body>

        <SelectFromImageComponent Game="Game" @bind-Value="dancer" Values="FaceDancerReplaced.ValidFaceDancers(Player)" ImageWidth="80"/>
        <ButtonRowComponent Confirm="Confirm" ConfirmText="@ConfirmLabel" ConfirmError="@Validation" Pass="Pass" PassText="Pass" />

    </Body>

</GameEventComponentLayout>

@code {

    protected override bool IsUrgent => true;
    protected override Faction IsFactionSpecific => Faction.Purple;

    private IHero dancer;

    protected override FaceDancerReplaced ConfirmedResult => new(Game, Faction) { Passed = false, SelectedDancer = dancer };

    protected override FaceDancerReplaced PassedResult => new(Game, Faction) { Passed = true };

    private string ConfirmLabel => dancer != null ? "Replace " + Name(dancer) : "Replace";
}