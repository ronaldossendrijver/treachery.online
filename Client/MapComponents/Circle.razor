@inherits MapComponent

<svg width="@Round(2f*Radius)" height="@Round(2f*Radius)" style="position:absolute;left:@Px(X-Radius);top:@Px(Y-Radius)" pointer-events="none">
    <circle 
            cx="@Round(Radius)" cy="@Round(Radius)" r="@Round(Radius - StrokeWidth)" 
            fill="@FillColor" fill-opacity="@Round(FillOpacity)"
            stroke="@StrokeColor" stroke-width="@Px(StrokeWidth)" />
</svg>

@code {

    [Parameter]
    public double Radius { get; set; } = 1f;

    [Parameter]
    public string FillColor { get; set; }

    [Parameter]
    public float FillOpacity { get; set; } = 1f;

    [Parameter]
    public string FillRule { get; set; } = "";

    [Parameter]
    public string StrokeColor { get; set; } = "transparent";

    [Parameter]
    public float StrokeWidth { get; set; } = 0;

    private int RoundedDiameter => (int)Math.Ceiling(Radius * 2);

}