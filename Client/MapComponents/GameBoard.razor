@inherits MapComponent

<div id="planetmap" style="position:absolute; left:0px">

    <div id="planetmap_inner" style="position:absolute; width:@Px(Client.CurrentSkin.MapDimensions.X); height:@Px(Client.CurrentSkin.MapDimensions.Y);">

        <BackgroundImage X="0" Y="0" Width="@Client.CurrentSkin.MapDimensions.X" Height="@Client.CurrentSkin.MapDimensions.Y" Src="@Client.CurrentSkin.Map_URL"/>

        @if (Client.Game.CurrentPhase > Phase.AwaitingPlayers)
        {
            <div style="width:100%; height:100%;">

                <SSW  />
                <ResourcesOnPlanet  />
                <Monsters  />
                <Phases  />
                <CardPiles  />
                <Planet  OnLocationClick="@OnLocationClick"/>
                <RecentMoves  />
                <ForcesOnPlanet  OnLocationClick="@OnLocationClick" />
                <Players  OnLocationClick="@OnLocationClick" />
                <Bids  />
                <Tanks  />
                <Disconnection  />
                <BattlePlans  />

            </div>
        }

    </div>

</div>

<div id="planetmap-filler" style="display:block" />

@code {

    [Parameter]
    public EventCallback<LocationEventArgs> OnLocationClick { get; set; }
}
