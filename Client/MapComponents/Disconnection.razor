@inherits MapComponent

@if (!Client.IsConnected)
{
    <MapText ToShow="You were disconnected from the game."
             X="@(Client.CurrentSkin.PlanetCenter.X)" Y="@(Client.CurrentSkin.PlanetCenter.Y)"
             Font="@Client.CurrentSkin.TURN_FONT" FontColor="darkred"
             BorderWidth="@Client.CurrentSkin.TURN_FONT_BORDERWIDTH" BorderColor="white"
             Align="@TextAlignment.Center" />

    <MapText ToShow="Please wait while the game is trying to reconnect..."
             X="@(Client.CurrentSkin.PlanetCenter.X)" Y="@(1.1f * Client.CurrentSkin.PlanetCenter.Y)"
             Font="@Client.CurrentSkin.PLAYERNAME_FONT" FontColor="darkred"
             BorderWidth="@Client.CurrentSkin.PLAYERNAME_FONT_BORDERWIDTH" BorderColor="white"
             Align="@TextAlignment.Center" />
}
