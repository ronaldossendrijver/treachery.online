@inherits MapComponent;

<MapImage X="X" Y="Y" Diameter="@Diameter" Src="@LeaderUrl" ShadowColor="@Client.CurrentSkin.SHADOW" ShadowX="2" ShadowY="2" ShadowBlur="1" Popover="@Popover" PopoverStyle=""/>

@code {

    [Parameter]
    public IHero ToShow { get; set; }

    [Parameter]
    public bool ShowPopover { get; set; } = true;

    private string LeaderUrl => Client.CurrentSkin.GetImageUrl(ToShow);

    private string Popover => ShowPopover ? Client.CurrentSkin.GetPopup(ToShow, Game) : null;
}
