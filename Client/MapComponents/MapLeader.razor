@inherits MapComponent;

<MapImage X=X Y=Y Diameter=@Diameter Src="@LeaderURL" ShadowColor="@Skin.Current.SHADOW" ShadowX="2" ShadowY="2" ShadowBlur="1" Popover="@Popover" PopoverStyle=""/>

@code {

    [Parameter]
    public IHero ToShow { get; set; }

    [Parameter]
    public bool ShowPopover { get; set; } = true;

    private string LeaderURL => Skin.Current.GetImageURL(ToShow);

    private string Popover => ShowPopover ? Popup.Get(ToShow, Game) : null;
}
