<img class="img-fluid @MarginClass" src="@Client.CurrentSkin.GetImageUrl(Faction)" width="@Diameter" height="@Diameter" alt="@DetermineTitle" title="@DetermineTitle" style="@Shadow;@Pointer" @onclick="@OnClick"/>

@code {

    [Parameter]
    public Faction Faction { get; set; } = Faction.Black;

    [Parameter] public string Title { get; set; } = string.Empty;

    [Parameter]
    public int Diameter { get; set; } = 30;

    [Parameter]
    public bool HasShadow { get; set; } = true;
    
    [Parameter]
    public string MarginClass { get; set; } = string.Empty;
    
    [Parameter]
    public EventCallback OnClick { get; set; }

    private string Shadow => HasShadow ? "filter: drop-shadow(1px 1px 1px black);" : "";

    private string Pointer => OnClick.HasDelegate ? "cursor: pointer;" : string.Empty;

    private string DetermineTitle => string.IsNullOrEmpty(Title) ? Client.CurrentSkin.Describe(Faction) : Title;
}
